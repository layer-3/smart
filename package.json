{
  "name": "hardhat-project",
  "scripts": {
    "contracts:node": "npx hardhat node --no-deploy",
    "contracts:deploy-localhost": "npx hardhat deploy --network localhost --export-all addresses.json && npx hardhat run scripts/nitro-protocol/postdeploy.ts && npm run contracts:export-accounts",
    "contracts:export-accounts": "npx hardhat run scripts/export-accounts.ts",
    "lint:check": "npm run eslint:check; npm run solhint:check",
    "eslint:check": "npx eslint \"./\"",
    "solhint:check": "npx solhint -w 0 './contracts/**/*.sol'",
    "lint:fix": "npm run eslint:fix; npm run prettier:fix; npm run solhint:fix",
    "eslint:fix": "eslint '**/*.{js,ts}' --fix",
    "prettier:fix": "prettier '**/*.{json,sol,md}' --write",
    "solhint:fix": "solhint 'contracts/**/*.sol' --fix",
    "docs": "solidity-docgen --solc-module solc -t docs/templates && doctoc ./docs/*.md --maxlevel 3"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "npm:@openzeppelin/contracts@^4.6.0",
    "@openzeppelin/contracts-3.4.2": "npm:@openzeppelin/contracts@3.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.6",
    "doctoc": "^2.1.0",
    "dotenv": "^16.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.0.0",
    "ethereum-cryptography": "^1.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.6",
    "hardhat": "^2.9.3",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-deploy": "^0.11.5",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solc": "^0.8.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.18",
    "solidity-docgen": "^0.5.16",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@statechannels/exit-format": "^0.0.6"
  }
}
